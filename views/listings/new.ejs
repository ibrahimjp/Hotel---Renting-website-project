<% layout("layouts/boilerplate") %>
  <body>
    <h2 style="align-items: center;">Create New Listing</h2>
    <div class="row">
      <div class="col-8 offset-2">
    <br />
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" placeholder="Enter Title" name="listing[title]" class="form-control" />
      </div>


      <div class="mb-3">
        <label for="description" class="form-label">Description</label>

       <textarea placeholder="Enter Description" name="listing[description]" class="form-control"></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input type="text" placeholder="Insert image/url link" name="listing[image]"  class="form-control"/>
      </div>


      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="text" placeholder="Enter Price" name="listing[price]"  class="form-control"/>
      </div>


      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" placeholder="Enter Country Name" name="listing[country]"  class="form-control"/>

      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" placeholder="Enter Location" name="listing[location]"  class="form-control"/>

      </div>

      <button class=" btn btn-dark">ADD</button>
    </form>
  </div>
  </div>
  </body>

